<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<BorderPane id="root" minHeight="500.0" minWidth="800.0" prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.mateuszpach.Asunkoban.controller.ExitController">
    <stylesheets>
        <URL value="@/view/main.css"/>
    </stylesheets>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <JFXButton onAction="#resume" styleClass="font, button" text="Resume"/>
            <JFXButton onAction="#reset" styleClass="font, button" text="Reset"/>
            <JFXButton onAction="#back" styleClass="font, button" text="Back to menu"/>
            <JFXButton onAction="#quit" styleClass="font, button" text="Quit"/>
        </VBox>
    </center>
</BorderPane>